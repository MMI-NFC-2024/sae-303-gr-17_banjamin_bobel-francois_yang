---
interface Props {
    title: string;
    description?: string;
}

import "../styles/global.css";

const { title, description = "Exploration du tourisme ferroviaire en France" } =
    Astro.props;
---

<!doctype html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <title>{title}</title>
    </head>

    <body>
        <slot />
    </body>
</html>